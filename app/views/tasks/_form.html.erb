<%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-success" %>
    </div>
<% end %>